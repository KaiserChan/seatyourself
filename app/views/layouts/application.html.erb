<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav>
  <ul>
    <li><%= link_to("Home", root_path) %></li> |
    <li><%= link_to("Restaurants", restaurants_path) %></li> |
    <li><%= link_to("Company", '#') %></li> |
    <li><%= link_to("Contact", '#') %></li>
    <li class="login-button">  <% if current_user %>
        Signed in as <%= current_user.email %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
      <% else %>
        <%= link_to "Log in", new_sessions_path %> or <%= link_to "Sign up", new_users_path %>
      <% end %>
    </li>
  </ul>

</nav>
<main>
  <%= yield %>
</main>


</body>


</html>

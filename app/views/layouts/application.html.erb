<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav>
  <ul>
    <li><%= link_to("Home", root_path) %></li> |
    <li><%= link_to("Restaurants", restaurants_path) %></li> |
    <li><%= link_to("Contact", '#') %></li>
    <li class="login-button">
      <% if current_user %>
        Signed in as: <%= current_user.email %><br>
        <%= link_to "Log out", sessions_path("current"), :method => :delete %> |
        <%= link_to "Dashboard", users_path %>
      <% elsif current_owner %>
        Signed in as: <%= current_owner.email %> <br>
        <%= link_to "Log out", sessions_path("current"), :method => :delete %> |
        <%= link_to "Dashboard", owners_path %>
      <% else %>
        <%= link_to "Log in", new_sessions_path %> or <br>
        <%= link_to "User Sign up", new_users_path %> |
        <%= link_to "Owner Sign up", new_owners_path %>
      <% end %>
    </li>
  </ul>

</nav>
<main>
  <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:alert] %>
      <p class="alert"><%= flash[:alert] %></p>
    <% end %>
  <%= yield %>
</main>


</body>
<footer>
    <ul class="footer_links">
      <li><%= link_to("Company", '#') %></li>
    </ul>
</footer>

</html>

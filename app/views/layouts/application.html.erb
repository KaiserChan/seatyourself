<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav>
    <%= image_tag ('seatyourself.png') %>
  <ul>

    <li><%= link_to("Home", root_path) %></li> |
    <li><%= link_to("Restaurants", restaurants_path) %></li> |
    <li><%= link_to("Company", '#') %></li> |
    <li><%= link_to("Contact", '#') %></li>
  </ul>
  <ul>

      <% if current_user %>

        <li><%= link_to "Dashboard", users_path %> </li>|
        <li> <%= current_user.first_name %> </li>|
        <li>
          <%= link_to "Log out", sessions_path("current"), :method => :delete %>
    </li>
      <% elsif current_owner %>

      <li>  <%= link_to "Dashboard", owners_path %> </li> |
       <li><%= current_owner.name %>  </li> |
       <li>
         <%= link_to "Log out", sessions_path("current"), :method => :delete %>
   </li>
      <% else %>
        <li><%= link_to "Log in", new_sessions_path %>   </li>|
        <li><%= link_to "User Sign up", new_users_path %>   </li>|
        <li><%= link_to "Owner Sign up", new_owners_path %>

      <% end %>
    </li>

  </ul>

</nav>
<main>
  <% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:alert] %>
    <p class="alert"><%= flash[:alert] %></p>
  <% end %>



  <%= yield %>
</main>


</body>


</html>
